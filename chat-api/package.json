{
  "name": "chat-api",
  "version": "0.0.0",
  "description": "Chat Api",
  "author": "Luis Vargas",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "dc:start:mongo": "docker-compose up mongo",
    "dc:down": "docker-compose down -v --remove-orphans",
    "docker:stop:all": "docker stop $(docker ps -q)"
  },
  "dependencies": {
    "@nestjs/common": "^7.3.0",
    "@nestjs/core": "^7.3.0",
    "@nestjs/platform-express": "^7.3.0",
    "@nestjs/platform-socket.io": "^7.3.0",
    "@nestjs/websockets": "^7.3.0",
    "cors": "^2.8.5",
    "hbs": "^4.1.1",
    "mongodb": "^3.5.9",
    "mongoose": "^5.9.20",
    "nestjs-typegoose": "^5.2.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.5",
    "typegoose": "^5.9.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.3.0",
    "@types/bson": "^4.0.2",
    "@types/express": "^4.17.6",
    "@types/jest": "^23.3.14",
    "@types/mongoose": "^5.7.29",
    "@types/node": "^10.17.26",
    "@types/socket.io": "^1.4.41",
    "@types/supertest": "^2.0.10",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "supertest": "^3.4.2",
    "ts-jest": "^23.10.5",
    "ts-loader": "^4.5.0",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
